<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_item"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageButton
        android:id="@+id/check_btn_noteItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="check"
        android:src="@drawable/a_unchecked_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView

        android:id="@+id/title_noteItem"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/check_btn_noteItem"
        android:layout_alignBottom="@id/check_btn_noteItem"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/check_btn_noteItem"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Buy eggs after ghn kn jnk k kjn kj"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/check_btn_noteItem"
        app:layout_constraintStart_toEndOf="@id/check_btn_noteItem"
        app:layout_constraintTop_toTopOf="@+id/check_btn_noteItem" />

    <TextView
        android:id="@+id/time_noteItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="6:00"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/title_noteItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_noteItem" />


</androidx.constraintlayout.widget.ConstraintLayout>